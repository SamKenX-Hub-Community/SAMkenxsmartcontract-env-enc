{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["dist", "**/*.spec.ts", "**/*.test.ts"]
}
